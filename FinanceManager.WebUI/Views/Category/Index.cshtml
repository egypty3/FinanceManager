@model IEnumerable<FinanceManager.Domain.Entities.Category>

@{
    ViewBag.Title = "Category list";
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
}

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Category name</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.Name</td>
            <td>
                <div class="btn-toolbar">
                    @Html.ActionLink("Edit", "Edit", "Category", new { categoryID = item.CategoryID }, new { @class = "btn btn-warning mr-2" })
                    @using (Html.BeginForm("Delete", "Category"))
                    {
                        @Html.Hidden("CategoryID", item.CategoryID)
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    }
                </div>
            </td>
        </tr>
    }
</table>
<div class="panel-footer">
    @Html.ActionLink("Add a new category", "Create", new { type = ViewBag.categoryType } , new { @class = "btn btn-success" })
</div>